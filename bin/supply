#!/usr/bin/env bash
set -eo pipefail

BUILD_DIR=${1}
CACHE_DIR=${2}
DEPS_DIR=${3}
INDEX=${4}
BUILDPACK_DIR=$(dirname $(readlink -f ${BASH_SOURCE%/*}))

echo "BUILDPACK_DIR   = ${BUILDPACK_DIR}"
echo "BUILD_DIR       = ${BUILD_DIR}"
echo "CACHE_DIR       = ${CACHE_DIR}"
echo "DEPS_DIR        = ${DEPS_DIR}"
echo "INDEX           = ${INDEX}"

# Pull in dependencies for future use of keytool - bundled with JDK
pushd "${CACHE_DIR}"
  curl -L -O https://github.com/AdoptOpenJDK/openjdk11-binaries/releases/download/jdk-11.0.10%2B9/OpenJDK11U-jdk_x64_linux_hotspot_11.0.10_9.tar.gz
  tar xzf OpenJDK11U-jdk_x64_linux_hotspot_11.0.10_9.tar.gz
  export PATH=$PWD/jdk-11.0.10+9/bin:$PATH

  curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
  unzip awscliv2.zip
  # -i copy all files to a specific directory
  # -b install directory is symbolically linked to the file aws in the specified path
  ./aws/install -i /tmp/aws-cli -b /tmp/bin
  /tmp/bin/aws --version
  export PATH=/tmp/bin:$PATH
popd

# Reference keystore to be used with app
pushd "${DEPS_DIR}/${INDEX}"

# aws configure list
# Setup credentials
echo "Setting credentials"
export AWS_ACCESS_KEY_ID="$(echo $VCAP_SERVICES | jq -r '.["user-provided"][0].credentials.AWS_ACCESS_KEY_ID')"
export AWS_SECRET_ACCESS_KEY="$(echo $VCAP_SERVICES | jq -r '.["user-provided"][0].credentials.AWS_SECRET_ACCESS_KEY')"
export AWS_DEFAULT_REGION="$(echo $VCAP_SERVICES | jq -r '.["user-provided"][0].credentials.AWS_DEFAULT_REGION')"
BUCKET_NAME="$(echo $VCAP_SERVICES | jq -r '.["user-provided"][0].credentials.BUCKET_NAME')"

echo BUCKET_NAME
echo AWS_SECRET_ACCESS_KEY
echo AWS_DEFAULT_REGION
echo BUCKET_NAME

# Copy a file from s3 bucket to current working directory
aws s3 cp s3://ir-ac-test/mytestfile.txt ./
ls
popd

# Create a .profile folder within the build directory
mkdir -p "${BUILD_DIR}/.profile.d"
# Create a param to reference build .profile + script
# s3_credentials.sh will be run when the app starts. Can be named whatever you want.
S3_CREDENTIALS_SCRIPT_PATH="${BUILD_DIR}/.profile.d/s3_credentials.sh"
# Make CUSTOM_KEYSTORE available as env variable when the script is run.
#echo "export CUSTOM_KEYSTORE=/deps/${INDEX}/${KEYSTORE}" > "${S3_CREDENTIALS_SCRIPT_PATH}"
echo $S3_CREDENTIALS_SCRIPT_PATH



